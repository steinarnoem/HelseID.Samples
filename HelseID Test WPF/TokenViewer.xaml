<Window x:Class="HelseID.Test.WPF.TokenViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelseID.Test.WPF"
        mc:Ignorable="d"
        Title="TokenViewer" Height="489" Width="595" WindowStartupLocation="CenterOwner">
    <Grid>
        <TextBox x:Name="TokenText" Margin="10,45,10,10" TextWrapping="Wrap" Text="{Binding Path=DataContext.Token}"/>
        <Button x:Name="CopyTokenAndFocusButton" Content="Marker alt og kopier til clipboard" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="210" Click="CopyTokenAndFocusButton_Click"/>
        <Button x:Name="OpenJwtIoButton" Content="Åpne JWT.IO" HorizontalAlignment="Left" Margin="225,10,0,0" VerticalAlignment="Top" Width="94" Click="OpenJwtIoButton_Click"/>

    </Grid>
</Window>
